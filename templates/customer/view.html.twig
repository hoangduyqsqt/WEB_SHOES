{% extends 'base.html.twig' %}

{% block body %}
    <a href="{{ path('customer_list') }}" class="btn btn-default">Back to Customer List</a>
    <hr/>
    <h2 class="page-header">{{ customer.name }}</h2>
    <ul class="list-group">
        <li class="list-group-item">Address: {{ customer.address }}</li>
        <li class="list-group-item">Age: {{ customer.age }}</li>
        <li class="list-group-item">Phone: {{ customer.phone }}</li>
    </ul>

{% endblock %}
